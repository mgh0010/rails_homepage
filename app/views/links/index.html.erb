<p id="notice"><%= notice %></p>

<div class ='container'>
  <div class='row'>
    <div class='col s12'>
      <h2 class=''>Links</h2>
    </div>
  </div>
</div>

<div class='container'>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.title %></td>
          <td><%= link.url %></td>
          <td><%= link_to 'Show', link %></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='row section new-link-btn'>
    <div class='col s12 offset-s6'>
      <a href= '/links/new' class="waves-effect waves-teal btn">New Link</a>
    </div>
  </div>
</div>

<br>

