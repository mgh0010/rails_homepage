<script>
  $(document).ready(function(){
    $('#link_title').focus(function() {
        $('#link_label').addClass('active');
    });
  });
</script>
<%= form_for(@link) do |f| %>
  <div class='container'>
    <div class='row'>
      <div class='col s12'>
        <div class='input-field col s6 offset-s3'>
          <input class='' id='link_title' type='text'>
          <label class='string' id='link_label' for='link_title'>Title</label>
        </div>
      </div>
      <div class="field">
        <%= f.label :url %><br>
        <%= f.text_field :url %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    
  </div>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% end %>
