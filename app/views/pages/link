    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    };
    
    document.getElementById('joke-btn').onclick = async function(){
      $('#joke-txt').addClass('scale-out');
      document.getElementById('joke').innerHTML = 'You just need to jump higher.';
      await sleep(50);
      $('#joke-txt').addClass('scale-in');
    };
    
  </script>
  
